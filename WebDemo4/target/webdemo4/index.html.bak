<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="GBK">
    <title>login</title>
    <link href="css/login.css" rel="stylesheet">
    <script src="js/jquery.js"></script>
</head>

<body>
<div id="loginDiv" style="height: 350px">
    <form  id="form" method="post">
        <h1 id="loginMsg">LOGIN IN</h1>
        <div id="errorMsg" style="display: none">用户名或密码不正确</div>
        <p>Username:<label for="username"></label><input id="username" name="username" type="text"></p>

        <p>Password:<label for="password"></label><input id="password" name="password" type="password"></p>
        <p>Remember:<label for="remember"></label><input id="remember" name="remember" type="checkbox"></p>
        <div id="subDiv">
            <input id="submitbutton" type="submit" class="button" value="login up">
            <input type="reset" class="button" value="reset">&nbsp;&nbsp;&nbsp;
            <a href="register.html">没有账号？</a>
        </div>
    </form>
</div>
<script>
    $("#submitbutton").click(function () {

        let password=document.getElementById("password").value;
        let username=document.getElementById("username").value;
        let rememberValue=document.getElementById("remember").checked;
        console.log(rememberValue);
        $.ajax({
            async: false,
            crossDomain:true,
            dataType: "text",
            url:"api/login.do",
            data:{
                username:username,
                password:password,
                remember:rememberValue
            },
            type:"post",
            success:function (data) {
                if(data==1){
                    alert("登录成功");
                }else {
                    alert("登陆失败");
                }

            },
            error:function () {
                alert("API连接失败");
            }
        });






    })
</script>

</body>
</html>